{
  "version": 2,
  "builds": [
    {
      "src": "client/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist/client"
      }
    },
    {
      "src": "src/**/*.ts",
      "use": "@vercel/node",
      "config": {
        "includeFiles": "src/**/*"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/src/$1.ts"
    },
    {
      "src": "/(.*)",
      "dest": "/dist/client/$1"
    }
  ]
}
